{
  "compilerOptions": {
    "module": "commonjs",
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "lib": ["ES2015"]
  },
  "include": [
    "src/**/*"
  ],
  "files": [
    "./src/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "@types/**",
    "**/*.spec.ts"
  ]
}